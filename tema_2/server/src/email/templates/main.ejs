<head></head>
<body>
    <div>
        <div>
            <h1 id="status">Weather Report 🌤️</h1>
            <div class="weather">
                <div>
                    <img src="https://openweathermap.org/img/wn/04d@4x.png" />
                </div>
                <div class="weather_status">
                    <h3>Clouds</h3>
                    <h4>broken clouds</h4>
                </div>
                <div class="weather_details">
                    <% for(const [key, value] of Object.entries(weather.main)) { %>
                    <div class="weather_details_row">
                        <span class="text-xl"
                            ><%= key .split("_") .map((k) => k.at(0).toUpperCase() + k.slice(1))
                            .join(" ") %>:</span
                        >
                        <span class="details_value"><%= value %></span>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div>
            <h1 id="status">Random Fact 🎲</h1>
            <div>
                <h3><%= fact.question %></h3>
                <p><%= fact.answer %></p>
            </div>
        </div>
    </div>
    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }
        .weather {
            display: flex;
            justify-content: start;
            align-items: center;
        }

        .weather_status {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 4;
        }
        .weather_details {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2;
            margin-left: 3.5rem;
        }
        .weather_details_row {
            display: flex;
            justify-content: start;
            align-items: center;
            gap: 4;
        }
        .text-xl {
            font-size: 1.25rem;
        }
        .details_value {
            font-size: 1.875rem;
            margin-left: auto;
        }
    </style>
</body>
